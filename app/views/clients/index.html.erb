<h1 class='text-xs-center'>Clients</h1>

<div class='container'>
  <div class=''>
    <button type='button' class='btn btn-outline-primary'><%= link_to octicon("plus").to_s, new_client_path, class: 'filled-link-icon' %></button>
  </div>
  
  <table class='table table-hover'>
    <thead>
      <tr>
        <th class='col-xs-4'>Client Name</th>
        <th class='col-xs-4'>Client Code</th>
        <th class='col-xs-2'>&nbsp</th>
        <th class='col-xs-1'>&nbsp</th>
        <th class='col-xs-1'>&nbsp</th>
      </tr>
    </thead>
    
    <tbody>
      <% @clients.each do |client| %>
        <tr>
          <td class='col-xs-4'><a href=<%= client_path(client) %>><%= client.name %></a></td>
          <td class='col-xs-4'><%= client.client_code %></td>
          <td class='col-xs-2'><%= link_to 'Connections', client_connections_path(client) %></td>
          <td class='col-xs-1'><%= link_to 'Edit', edit_client_path(client) %></td>
          <td class='col-xs-1'><%= link_to 'Delete', client_path(client), 
                    method: :delete, 
                    data: {confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>