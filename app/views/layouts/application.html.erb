<!DOCTYPE html>
<html>
<head>
  <title>Client Portal</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag    'navigation', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <ul class='nav nav-tabs'>
      <li class='nav-item'>
        <a class='nav-link' href="/">Clients</a>
      </li>
      
      <% if @client %>
        <li class='nav-item'>
          <a class='nav-link' href='<%= client_path @client %>'><%= @client.client_code %>: Info</a>
        </li>
        <li class='nav-item'>
          <a class='nav-link' href='<%= client_connections_path @client %>'><%= @client.client_code %>: Connections</a>
        </li>
      <% end %>
    </ul>
  </nav>

<%= yield %>

</body>
</html>
