<div class='container'>
    <div class=''>
      <button type='button' class='btn btn-outline-primary'><%= link_to octicon("plus").to_s, new_client_account_path, class: 'filled-link-icon' %></button>
    </div>
    
    <table class='table table-hover'>
      <thead>
        <tr>
          <th class='col-xs-3'>Username</th>
          <th class='col-xs-3'>Password</th>
          <th class='col-xs-2'>Domain</th>
          <th class='col-xs-2'>Updated</th>
          <th class='col-xs-1'>&nbsp</th>
          <th class='col-xs-1'>&nbsp</th>
        </tr>
      </thead>
      
      <tbody>
        <% @accounts.each do |account| %>
          <tr>
            <td class='col-xs-3'><%= account.username %></td>
            <td class='col-xs-3'><%= account.password %></td>
            <td class='col-xs-2'><%= account.domain %></td>
            <td class='col-xs-2'><%= account.updated_at.strftime "%D" %></td>
            <td class='col-xs-1'><%= link_to 'Edit', edit_client_account_path(@client, account) %></td>
            <td class='col-xs-1'><%= link_to 'Delete', client_account_path(@client, account), 
                      method: :delete, 
                      data: {confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>